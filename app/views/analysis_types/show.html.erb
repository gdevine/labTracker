<% provide(:title, 'Analysis Type View') %>
<% provide(:pageheading, 'Analysis Type '+ @analysis_type.id.to_s) %>

<!-- Add edit/delete buttons if authorized -->
<% if can? :crud, @analysis_type %>
	<div class="row bottomspace">  
	  <div class="col-xs-12 col-sm-2 col-sm-push-10">
			<a class="btn btn-block btn-info" data-toggle="dropdown" href="#" id="options_button">
			  Options
			  <span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
			  <li><%= link_to "Edit Analysis Type", edit_analysis_type_path(id:@analysis_type.id) %> </li>
			  <li><%= link_to "Delete Analysis Type", @analysis_type, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		  </ul>
		</div>
	</div>
<% end %>


<div class="row topspace20">
  <div class="col-md-12">	
	
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Analysis Type ID</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @analysis_type.id %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Name</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @analysis_type.name %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Instrument</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @analysis_type.instrument %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Description</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @analysis_type.description %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Created on</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @analysis_type.created_at.to_date.strftime('%a %b %d %Y') %></p>
		  </div>
		</div>
		
  </div>
  
</div>